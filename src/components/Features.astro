---
interface Feature {
  title: string;
  icon: string;
  description: string;
}

const features: Feature[] = [
  {
    title: "Fast & Lightweight",
    icon: "🚀",
    description: "Efficient rendering with minimal overhead. Your TUIs will be as fast as they are delicious."
  },
  {
    title: "Rich Ingredients",
    icon: "🧩",
    description: "Charts, tables, lists, gauges, and more. Mix and match widgets to create the perfect recipe."
  },
  {
    title: "Flexible Recipes",
    icon: "⚙️",
    description: "Responsive layouts that adapt to any terminal size. CSS-like constraints with Rust performance."
  },
  {
    title: "Pure Rust",
    icon: "🦀",
    description: "Type-safe, memory-safe, and thread-safe. No C dependencies, just pure Rust goodness."
  }
];
---

<div class="flex justify-center">
  <div class="max-w-[1500px]">
    <p class="font-bold text-4xl p-2 pb-8 text-black dark:text-white landing-mono">
      Your favourite features
    </p>
    <div class="grid grid-cols-2 gap-6 p-[80px] bg-gradient-to-r from-blue-600 to-blue-800 dark:from-blue-800 dark:to-blue-950 auto-rows-fr">
      {features.map((feature) => (
        <div class="p-8 !m-0 bg-gradient-to-r from-slate-100 to-slate-300 dark:from-slate-900 dark:to-slate-800 h-full">
          <div>
            <span class="text-4xl">{feature.icon}</span>
          </div>
          <h3 class="font-bold text-xl">{feature.title}</h3>
          <p class="text-lg pt-2">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</div>
